[Unit]
Description=Flask Todo App
After=network.target

[Service]
Type=simple
User={{ app_user }}
WorkingDirectory={{ app_dir }}
Environment=PATH={{ app_dir }}/venv/bin
EnvironmentFile={{ app_dir }}/.env
ExecStart={{ app_dir }}/venv/bin/python run.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target 